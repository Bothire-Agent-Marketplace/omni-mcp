{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "LOG_LEVEL",
    "GATEWAY_PORT",
    "GATEWAY_HOST",
    "GATEWAY_URL",
    "POSTGRES_HOST",
    "POSTGRES_PORT",
    "POSTGRES_DB",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_SSL",
    "DATABASE_URL",
    "LINEAR_API_KEY",
    "LINEAR_SERVER_URL",
    "QUERYQUILL_SERVER_URL",
    "JWT_SECRET",
    "MCP_API_KEY",
    "API_RATE_LIMIT",
    "ALLOWED_ORIGINS",
    "REQUIRE_API_KEY",
    "ENABLE_RATE_LIMITING",
    "MAX_REQUEST_SIZE",
    "CORS_CREDENTIALS",
    "MCP_HANDSHAKE_TIMEOUT",
    "SESSION_TIMEOUT",
    "MAX_CONCURRENT_SESSIONS",
    "VERCEL_ENV",
    "VERCEL_URL",
    "APP_TIMEZONE"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "docker:build": {
      "dependsOn": ["build"],
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
