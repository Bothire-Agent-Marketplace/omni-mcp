# =============================================================================
# Linear MCP Server Environment Configuration
# =============================================================================
# This file contains ONLY Linear server-specific configuration
# Following the principle of least privilege

# =============================================================================
# Core Configuration
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# =============================================================================
# Linear API Configuration
# =============================================================================
# Linear API Key (REQUIRED - Get from Linear Settings > API)
LINEAR_API_KEY=lin_api_your-actual-api-key-here

# Linear API Base URL (default: https://api.linear.app)
LINEAR_API_URL=https://api.linear.app

# Linear API Version (default: latest)
LINEAR_API_VERSION=2024-01-01

# =============================================================================
# Server Configuration
# =============================================================================
# Server name for identification
SERVER_NAME=linear-mcp-server

# Server version
SERVER_VERSION=1.0.0

# =============================================================================
# Rate Limiting & Performance
# =============================================================================
# Maximum requests per minute to Linear API
LINEAR_RATE_LIMIT=60

# Request timeout in milliseconds
LINEAR_REQUEST_TIMEOUT=30000

# =============================================================================
# Security Configuration
# =============================================================================
# Enable request validation
ENABLE_REQUEST_VALIDATION=true

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# Feature Flags
# =============================================================================
# Enable specific Linear features
ENABLE_ISSUE_CREATION=true
ENABLE_ISSUE_UPDATES=true
ENABLE_TEAM_ACCESS=true
ENABLE_PROJECT_ACCESS=true 