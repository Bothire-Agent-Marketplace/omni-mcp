{
  "name": "@mcp/database",
  "version": "1.0.0",
  "description": "Shared database package with Prisma client and schema",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist generated",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:prompts": "tsx prisma/seed-prompts-resources.ts",
    "db:reset": "tsx prisma/smart-reset.ts",
    "db:reset:force": "prisma migrate reset --force",
    "db:backup": "tsx prisma/backup-restore.ts backup",
    "db:restore": "tsx prisma/backup-restore.ts restore",
    "db:deploy": "prisma migrate deploy",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.2.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "prisma": "^6.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./generated/index.js",
      "types": "./generated/index.d.ts"
    }
  }
}
