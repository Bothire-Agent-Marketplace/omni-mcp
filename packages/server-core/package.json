{
  "name": "@mcp/server-core",
  "version": "1.0.0",
  "description": "Core utilities and abstractions for building MCP servers with TypeScript",
  "author": "Bothire Agent Marketplace",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./http-server": "./dist/http-server.js",
    "./config": "./dist/config.js",
    "./entry-point": "./dist/entry-point.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@mcp/config-service": "workspace:*",
    "@mcp/database": "workspace:*",
    "@mcp/schemas": "workspace:*",
    "@mcp/utils": "workspace:*",
    "fastify": "^5.4.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "server",
    "core",
    "typescript",
    "fastify"
  ],
  "license": "MIT"
}
