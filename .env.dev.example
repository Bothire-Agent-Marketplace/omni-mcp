# =============================================================================
# OMNI MCP PLATFORM - DEVELOPMENT ENVIRONMENT
# =============================================================================
# Copy this file to .env.local and update the values for your development setup

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://omni_dev:omni_dev_password@localhost:5432/omni_dev"

# Alternative for Docker Compose
# DATABASE_URL="postgresql://omni_dev:omni_dev_password@postgres:5432/omni_dev"

# -----------------------------------------------------------------------------
# Clerk Authentication (Development)
# -----------------------------------------------------------------------------
# Get these from your Clerk Dashboard (https://clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"
CLERK_SECRET_KEY="sk_test_your_secret_key_here"

# Webhook secret for Clerk webhooks (generate a random string)
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------
# Gateway Configuration
GATEWAY_PORT=37373
GATEWAY_HOST="localhost"

# Linear MCP Server
LINEAR_API_TOKEN="your_linear_api_token_here"
LINEAR_TEAM_ID="your_linear_team_id_here"

# Perplexity MCP Server
PERPLEXITY_API_KEY="your_perplexity_api_key_here"

# DevTools MCP Server
DEVTOOLS_ENABLED=true

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# Enable development features
NODE_ENV="development"
NEXT_PUBLIC_APP_ENV="development"

# Logging
LOG_LEVEL="debug"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# Ngrok Configuration (for webhooks)
# -----------------------------------------------------------------------------
# Set these if you're using ngrok for webhook testing
NGROK_AUTHTOKEN="your_ngrok_authtoken_here"
NEXT_PUBLIC_WEBHOOK_URL="https://your-ngrok-subdomain.ngrok.io"

# -----------------------------------------------------------------------------
# Development Seeding
# -----------------------------------------------------------------------------
# Default admin user for development
DEV_ADMIN_EMAIL="admin@omni.dev"
DEV_ADMIN_FIRST_NAME="Admin"
DEV_ADMIN_LAST_NAME="User"

# Default organization
DEV_ORG_NAME="Development Organization"
DEV_ORG_SLUG="dev-org" 