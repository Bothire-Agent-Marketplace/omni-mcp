{
  "name": "@mcp/gateway",
  "version": "workspace:*",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/websocket": "^10.0.1",
    "@mcp/schemas": "workspace:*",
    "@mcp/utils": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.13.2",
    "dotenv": "^17.0.0",
    "fastify": "^4.28.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.8",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "supertest": "^7.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^1.6.0"
  },
  "vitest": {
    "environment": "node",
    "include": [
      "**/__tests__/**/*.ts",
      "**/*.test.ts"
    ],
    "coverage": {
      "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        "src/**/*.d.ts",
        "src/index.ts"
      ],
      "reporter": [
        "text",
        "lcov",
        "html"
      ]
    },
    "testTimeout": 30000
  }
}
