# =============================================================================
# MCP Gateway Environment Configuration
# =============================================================================
# This file contains ONLY gateway-specific configuration
# Individual MCP servers should have their own environment files

# =============================================================================
# Gateway Configuration
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# Gateway Server Settings
GATEWAY_PORT=37373
GATEWAY_HOST=0.0.0.0

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Secret for session management (CHANGE IN PRODUCTION)
JWT_SECRET=dev-jwt-secret-change-in-production

# Gateway API Key for client authentication (CHANGE IN PRODUCTION)
GATEWAY_API_KEY=dev-gateway-api-key-change-in-production

# =============================================================================
# MCP Configuration
# =============================================================================
# MCP handshake timeout in milliseconds
MCP_HANDSHAKE_TIMEOUT=10000

# Maximum concurrent sessions
MAX_CONCURRENT_SESSIONS=100

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Enable metrics collection
ENABLE_METRICS=true

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Health check interval in milliseconds
HEALTH_CHECK_INTERVAL=30000 