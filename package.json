{
  "name": "mcp-servers",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "build": "turbo build",
    "build:gateway": "turbo build --filter=@mcp/gateway...",
    "build:docker": "pnpm --filter dev-tools docker:build",
    "build:docker:all": "pnpm --filter dev-tools docker:build:all",
    "build:all": "pnpm build && pnpm build:docker:all",
    "pull:docker": "pnpm --filter dev-tools docker:pull",
    "dev": "turbo dev",
    "watch:config": "pnpm --filter dev-tools watch:claude-config",
    "clean": "turbo clean && rm -rf node_modules && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:docker": "docker system prune -f",
    "clean:all": "pnpm clean && pnpm clean:docker",
    "type-check": "turbo type-check",
    "omni": "node --enable-source-maps packages/dev-tools/dist/cli/index.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/prompts": "^2.4.9",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  }
}
