{
  "name": "mcp-servers",
  "private": true,
  "scripts": {
    "audit": "echo 'ğŸ” Checking for unused dependencies...' && pnpm dlx depcheck --ignore-bin-package --ignores='@types/fs-extra,@types/js-yaml,@types/prompts,lint-staged,prettier,ts-node,ts-prune' && echo '\nğŸ§¹ Checking for unused exports...' && pnpm dlx ts-prune --project tsconfig.base.json --error",
    "build": "turbo build && cp packages/utils/src/mcp-servers.json packages/utils/dist/",
    "clean": "turbo clean && rm -rf node_modules && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "dev": "turbo dev",
    "lint": "eslint \"**/*.{ts,js}\" --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/*.cjs\" --fix && prettier --write \"**/*.{ts,js,json,md}\"",
    "omni": "node --enable-source-maps packages/dev-tools/dist/cli/index.js",
    "prepare": "husky",
    "sync": "syncpack fix-mismatches && syncpack format",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/ui": "^3.2.4",
    "depcheck": "^1.4.7",
    "eslint": "^9.30.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.2.5",
    "syncpack": "^13.0.4",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "bash -c 'eslint \"$@\" --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/*.cjs\" --fix --rule \"unused-imports/no-unused-imports: error\" --rule \"import/order: error\"' _",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.12.4",
  "pnpm": {
    "overrides": {}
  },
  "dependencies": {
    "typescript-eslint": "^8.35.1"
  }
}
