{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "client-integrations/shared/mcp-bridge-core.js",
        "client-integrations/shared/config.js",
        "scripts/scaffold-mcp-server.js"
      ]
    },
    "packages/*": {},
    "apps/*": {},
    "packages/dev-tools": {
      "entry": ["src/index.ts", "src/cli/index.ts"]
    },
    "packages/eslint-config": {
      "ignoreDependencies": ["eslint-config-next"]
    }
  },
  "ignore": ["**/dist/**", "**/node_modules/**", "**/*.d.ts", "client-integrations/*/bridge.js"]
}
