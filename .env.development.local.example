# =============================================================================
# Omni MCP - Development Environment Configuration (EXAMPLE)
# =============================================================================
# Copy this file to .env.development.local and update with your actual values
# NEVER commit the .env.development.local file - it contains secrets!

# =============================================================================
# Core Application Settings
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# =============================================================================
# MCP Gateway Configuration
# =============================================================================
GATEWAY_PORT=37373
GATEWAY_HOST=0.0.0.0

# =============================================================================
# Security & Authentication
# =============================================================================
JWT_SECRET=dev-jwt-secret-change-in-production
MCP_API_KEY=your-generated-api-key-here

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_NAME=dvdrental
DB_USER=postgres
DB_PASSWORD=postgres

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=omni_mcp_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

MYSQL_HOST=localhost
MYSQL_USER=analytics_user
MYSQL_PASSWORD=analytics-password

# =============================================================================
# MCP Server API Keys
# =============================================================================
# Linear API Key - Get from: https://linear.app/settings/api
LINEAR_API_KEY=your_linear_api_key_here

# =============================================================================
# AI Provider API Keys (Optional - for future features)
# =============================================================================
# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Generative AI API Key
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key-here

# Wolfram Alpha API Key
WOLFRAM_ALPHA_API_KEY=your-wolfram-alpha-api-key-here

# Perplexity API Key
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# =============================================================================
# MCP Configuration
# =============================================================================
# MCP handshake timeout in milliseconds (default: 10000 = 10 seconds)
MCP_HANDSHAKE_TIMEOUT=10000

# =============================================================================
# Google Cloud (Optional)
# =============================================================================
GOOGLE_APPLICATION_CREDENTIALS=./secrets/gcp-creds.json 